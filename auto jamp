-- Авто-прыжок с интерфейсом
local Player = game:GetService("Players").LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Создаем GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AutoJumpGUI"
ScreenGui.Parent = PlayerGui

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 100)
Frame.Position = UDim2.new(0, 10, 0, 10)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.Parent = ScreenGui

local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.new(0, 180, 0, 30)
ToggleButton.Position = UDim2.new(0, 10, 0, 10)
ToggleButton.Text = "Включить авто-прыжок"
ToggleButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Parent = Frame

local StatusLabel = Instance.new("TextLabel")
StatusLabel.Size = UDim2.new(0, 180, 0, 20)
StatusLabel.Position = UDim2.new(0, 10, 0, 50)
StatusLabel.Text = "Статус: Выключено"
StatusLabel.BackgroundTransparency = 1
StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
StatusLabel.Parent = Frame

-- Переменные для авто-прыжка
local AutoJumpEnabled = false
local Character = nil
local Humanoid = nil

-- Функция обновления персонажа
local function UpdateCharacter()
    Character = Player.Character
    if Character then
        Humanoid = Character:FindFirstChild("Humanoid")
    end
end

UpdateCharacter()
Player.CharacterAdded:Connect(UpdateCharacter)

-- Функция авто-прыжка
local function AutoJumpLoop()
    while AutoJumpEnabled do
        if Character and Humanoid and Humanoid.Health > 0 then
            local state = Humanoid:GetState()
            -- Прыгаем только если стоим на земле
            if state == Enum.HumanoidStateType.Running or state == Enum.HumanoidStateType.Landed then
                Humanoid.Jump = true
            end
        end
        wait(0.3) -- Интервал прыжков
    end
end

-- Обработчик кнопки
ToggleButton.MouseButton1Click:Connect(function()
    AutoJumpEnabled = not AutoJumpEnabled
    
    if AutoJumpEnabled then
        ToggleButton.Text = "Выключить авто-прыжок"
        StatusLabel.Text = "Статус: Включено"
        StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        spawn(AutoJumpLoop)
    else
        ToggleButton.Text = "Включить авто-прыжок"
        StatusLabel.Text = "Статус: Выключено"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end)

print("Авто-прыжок с GUI загружен")
